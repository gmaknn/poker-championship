generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// MODÈLES PRINCIPAUX
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          String    @default("ADMIN")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Player {
  id                String              @id @default(cuid())
  firstName         String
  lastName          String
  nickname          String              @unique
  email             String?
  password          String?             // Hash du mot de passe (null = compte non activé)
  avatar            String?
  status            PlayerStatus        @default(INACTIVE)  // INACTIVE par défaut, passe à ACTIVE après activation
  role              PlayerRole          @default(PLAYER) // Rôle principal (legacy, gardé pour compatibilité)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  // Relations
  tournamentPlayers TournamentPlayer[]
  eliminations      Elimination[]       @relation("Eliminator")
  eliminatedBy      Elimination[]       @relation("Eliminated")
  createdTournaments Tournament[]       @relation("TournamentCreator")

  // Multi-rôles (nouveau système)
  roles             PlayerRoleAssignment[]

  // Tournois où ce joueur est directeur assigné
  directedTournaments TournamentDirector[]

  // Tokens d'activation
  activationTokens  AccountActivationToken[]

  @@index([status])
  @@index([nickname])
  @@index([role])
}

model Season {
  id                    String      @id @default(cuid())
  name                  String
  year                  Int
  startDate             DateTime
  endDate               DateTime?
  status                SeasonStatus @default(ACTIVE)

  // Paramètres de scoring
  pointsFirst           Int         @default(1500)
  pointsSecond          Int         @default(1000)
  pointsThird           Int         @default(700)
  pointsFourth          Int         @default(500)
  pointsFifth           Int         @default(400)
  pointsSixth           Int         @default(300)
  pointsSeventh         Int         @default(200)
  pointsEighth          Int         @default(200)
  pointsNinth           Int         @default(200)
  pointsTenth           Int         @default(200)
  pointsEleventh        Int         @default(100)
  pointsSixteenth       Int         @default(50)

  eliminationPoints     Int         @default(50)
  leaderKillerBonus     Int         @default(25)

  // Malus de recave
  freeRebuysCount       Int         @default(2)
  rebuyPenaltyTier1     Int         @default(-50)   // 3 recaves
  rebuyPenaltyTier2     Int         @default(-100)  // 4 recaves
  rebuyPenaltyTier3     Int         @default(-150)  // 5+ recaves

  // Système de meilleures performances
  totalTournamentsCount Int?
  bestTournamentsCount  Int?        // Nombre de tournois à retenir pour le classement

  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  // Relations
  tournaments           Tournament[]

  @@index([status])
  @@index([year])
}

model Tournament {
  id                    String              @id @default(cuid())
  seasonId              String?
  season                Season?             @relation(fields: [seasonId], references: [id])

  createdById           String?
  createdBy             Player?             @relation("TournamentCreator", fields: [createdById], references: [id])

  name                  String?
  date                  DateTime
  type                  TournamentType      @default(CHAMPIONSHIP)
  status                TournamentStatus    @default(PLANNED)

  // Configuration générale
  buyInAmount           Float               @default(10)
  startingChips         Int                 @default(5000)
  targetDuration        Int                 @default(180) // en minutes

  // Recave allégée
  lightRebuyEnabled     Boolean             @default(false)
  lightRebuyMinBB       Int                 @default(30)
  lightRebuyAmount      Float               @default(5)

  // Structure
  levelDuration         Int                 @default(12) // en minutes
  rebuyEndLevel         Int?                // Niveau où se termine la période de recave
  maxRebuysPerPlayer    Int?                // Max rebuys par joueur (null = illimité)

  // Prize pool
  prizePool             Float?
  prizeDistribution     Json?               // {1: 50%, 2: 30%, 3: 20%}
  prizePayoutCount      Int?                // Nombre de places payées
  prizePayoutPercents   Json?               // Array de pourcentages ex: [50, 30, 20]
  prizePayoutUpdatedAt  DateTime?           // Dernière mise à jour de la distribution

  // Données du tournoi
  totalPlayers          Int?
  tablesCount           Int?
  currentLevel          Int                 @default(1)
  timerStartedAt        DateTime?
  timerPausedAt         DateTime?
  timerElapsedSeconds   Int                 @default(0)

  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  finishedAt            DateTime?

  // Relations
  tournamentPlayers     TournamentPlayer[]
  blindLevels           BlindLevel[]
  eliminations          Elimination[]
  tableAssignments      TableAssignment[]
  chipDenominations     ChipDenomination[]
  chipConfig            TournamentChipConfig?

  // Directeurs de tournoi assignés (1..n)
  directors             TournamentDirector[]

  @@index([seasonId])
  @@index([status])
  @@index([date])
  @@index([createdById])
}

model TournamentPlayer {
  id                String      @id @default(cuid())
  tournamentId      String
  tournament        Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  playerId          String
  player            Player      @relation(fields: [playerId], references: [id])

  // Données de participation
  hasPaid           Boolean     @default(false)
  finalRank         Int?
  rebuysCount       Int         @default(0)
  lightRebuyUsed    Boolean     @default(false)
  eliminationsCount Int         @default(0)
  leaderKills       Int         @default(0)

  // Points calculés
  rankPoints        Int         @default(0)
  eliminationPoints Int         @default(0)
  bonusPoints       Int         @default(0)
  penaltyPoints     Int         @default(0)
  totalPoints       Int         @default(0)

  // Gains
  prizeAmount       Float?

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@unique([tournamentId, playerId])
  @@index([tournamentId])
  @@index([playerId])
}

model BlindLevel {
  id            String      @id @default(cuid())
  tournamentId  String
  tournament    Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  level         Int
  smallBlind    Int
  bigBlind      Int
  ante          Int         @default(0)
  duration      Int         @default(12) // en minutes
  isBreak       Boolean     @default(false)
  rebalanceTables Boolean   @default(false) // Réassigner les tables après ce niveau
  isRebuyEnd    Boolean     @default(false) // Fin des recaves après ce niveau

  createdAt     DateTime    @default(now())

  @@unique([tournamentId, level])
  @@index([tournamentId])
}

model TableAssignment {
  id            String      @id @default(cuid())
  tournamentId  String
  tournament    Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  playerId      String
  tableNumber   Int
  seatNumber    Int?
  isActive      Boolean     @default(true)

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([tournamentId])
  @@index([tournamentId, tableNumber])
}

model Elimination {
  id              String      @id @default(cuid())
  tournamentId    String
  tournament      Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  eliminatedId    String
  eliminated      Player      @relation("Eliminated", fields: [eliminatedId], references: [id])

  eliminatorId    String
  eliminator      Player      @relation("Eliminator", fields: [eliminatorId], references: [id])

  rank            Int         // Position de sortie du joueur éliminé
  level           Int         // Niveau auquel l'élimination a eu lieu
  isLeaderKill    Boolean     @default(false)

  createdAt       DateTime    @default(now())

  @@index([tournamentId])
  @@index([eliminatedId])
  @@index([eliminatorId])
}

model TournamentTemplate {
  id            String      @id @default(cuid())
  name          String
  description   String?

  targetDuration Int?       // en minutes (optionnel)
  startingChips  Int?       // optionnel
  levelDuration  Int?       // en minutes (optionnel)
  rebuyEndLevel  Int?       // optionnel

  structure     Json        // Structure complète des blindes

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([name])
}

model ChipInventory {
  id            String      @id @default(cuid())
  value         Int         @unique
  quantity      Int

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

// Mallette de jetons (peut combiner plusieurs mallettes pour un tournoi)
model ChipSet {
  id            String              @id @default(cuid())
  name          String              // "Mallette Principale", "Mallette 2"
  description   String?
  isActive      Boolean             @default(true)

  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  // Relations
  denominations ChipSetDenomination[]

  @@index([isActive])
}

// Dénominations de jetons dans une mallette
model ChipSetDenomination {
  id              String      @id @default(cuid())
  chipSetId       String
  chipSet         ChipSet     @relation(fields: [chipSetId], references: [id], onDelete: Cascade)

  value           Int         // Valeur du jeton (25, 100, 500, etc.)
  quantity        Int         // Quantité disponible de cette dénomination
  color           String      // Couleur principale (#HEX ou nom)
  colorSecondary  String?     // Couleur secondaire (optionnel)

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([chipSetId])
}

// Configuration de jetons utilisée pour un tournoi spécifique
model TournamentChipConfig {
  id                String      @id @default(cuid())
  tournamentId      String      @unique
  tournament        Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  chipSetsUsed      Json        // Array des IDs de ChipSet utilisés
  distribution      Json        // Distribution calculée par joueur
  playersCount      Int         // Nombre de joueurs au moment du calcul
  stackSize         Int         // Stack de départ
  rebuysExpected    Int         @default(0) // Nombre de rebuys attendus

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([tournamentId])
}

model ChipDenomination {
  id              String      @id @default(cuid())
  tournamentId    String?
  tournament      Tournament? @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  value           Int         // Valeur du jeton (10, 25, 50, 100, etc.)
  color           String      // Couleur principale (#HEX ou nom de couleur)
  colorSecondary  String?     // Couleur secondaire pour jetons bicolores
  quantity        Int?        // Quantité disponible (optionnel)
  order           Int         // Ordre d'affichage
  isDefault       Boolean     @default(false) // Configuration par défaut du championnat

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([tournamentId])
  @@index([isDefault])
}

model Settings {
  id                    String      @id @default(cuid())

  // Informations générales
  championshipName      String      @default("POKER CHAMPIONSHIP")
  clubName              String      @default("WPT VILLELAURE")
  clubLogo              String?

  // Paramètres par défaut des tournois
  defaultBuyIn          Float       @default(10)
  defaultStartingChips  Int         @default(5000)
  defaultLevelDuration  Int         @default(12)
  defaultTargetDuration Int         @default(180)

  // Notifications
  enableEmailNotifications Boolean  @default(false)
  enableSmsNotifications   Boolean  @default(false)

  // Affichage
  theme                 String      @default("dark")
  language              String      @default("fr")

  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
}

// ============================================
// MODÈLES AUTHENTIFICATION (Invitation + Activation)
// ============================================

// Token d'activation de compte (envoyé par email lors de l'invitation)
model AccountActivationToken {
  id          String    @id @default(cuid())
  tokenHash   String    @unique  // Hash SHA-256 du token (jamais le token en clair)
  playerId    String
  player      Player    @relation(fields: [playerId], references: [id], onDelete: Cascade)
  expiresAt   DateTime  // Date d'expiration (48h par défaut)
  usedAt      DateTime? // Date d'utilisation (null = non utilisé)
  createdAt   DateTime  @default(now())

  @@index([playerId])
  @@index([expiresAt])
}

// ============================================
// MODÈLES RBAC (Multi-rôles + TD par tournoi)
// ============================================

// Table d'association Player <-> Roles (multi-rôles simultanés)
model PlayerRoleAssignment {
  id        String      @id @default(cuid())
  playerId  String
  player    Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)
  role      PlayerRole
  createdAt DateTime    @default(now())

  @@unique([playerId, role])
  @@index([playerId])
  @@index([role])
}

// Table d'association Tournament <-> Directors (1..n TD par tournoi)
model TournamentDirector {
  id            String      @id @default(cuid())
  tournamentId  String
  tournament    Tournament  @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  playerId      String
  player        Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)
  assignedAt    DateTime    @default(now())
  assignedById  String?     // ID de l'admin qui a fait l'assignation

  @@unique([tournamentId, playerId])
  @@index([tournamentId])
  @@index([playerId])
}

// ============================================
// ENUMS
// ============================================

enum PlayerRole {
  PLAYER
  TOURNAMENT_DIRECTOR
  ANIMATOR
  ADMIN
}

enum PlayerStatus {
  INACTIVE  // Compte créé mais pas encore activé (en attente d'activation via email)
  ACTIVE
  ARCHIVED
}

enum SeasonStatus {
  ACTIVE
  ARCHIVED
}

enum TournamentType {
  CHAMPIONSHIP
  CASUAL
}

enum TournamentStatus {
  PLANNED
  REGISTRATION
  IN_PROGRESS
  FINISHED
  CANCELLED
}
